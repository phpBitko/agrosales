                            <p>Дата:{{ item.addDate|date("H:m, d.m.Y") }}</p>
                        </div>
                    </div>
                {% endfor %}
                <div class="navigation text-center">
                    {{ pagerfanta(advertisement, 'twitter_bootstrap4_translated', { routeName: 'advertisement_index_paginated', omitFirstPage: false}) }}
