<div class="map-provision">
    <div class="details-road {% if advertisementDetails.isRoad|default(false) == true %} active {% endif %}"
         data-toggle="tooltip" title="{% if advertisementDetails.isRoad|default(false) == true %} Присутній
                          {% else %} Відсутній {% endif %}під'їзд з твердим покриттям ">
        {% if advertisementDetails.isRoad|default(false) == true %}
            <img src="{{ asset('bundles/app/img/ico/road_on.png') }}" alt="road">
        {% else %}
            <img src="{{ asset('bundles/app/img/ico/road_off.png') }}" alt="road">
        {% endif %}
    </div>
    <div class="details-water {% if advertisementDetails.isWaterSupply|default(false) == true %} active {% endif %}"
         data-toggle="tooltip" title="{% if advertisementDetails.isWaterSupply|default(false) == true %} Присутнє
                          {% else %} Відсутнє {% endif %}водопостачання ">
        {% if advertisementDetails.isWaterSupply|default(false) == true %}
            <img src="{{ asset('bundles/app/img/ico/water_on.png') }}" alt="">
        {% else %}
            <img src="{{ asset('bundles/app/img/ico/water_off.png') }}" alt="">
        {% endif %}
    </div>
    <div class="details-gas {% if advertisementDetails.isGas|default(false) == true %} active {% endif %}"
         data-toggle="tooltip" title="{% if advertisementDetails.isGas|default(false) == true %} Присутнє
                          {% else %} Відсутнє {% endif %}газопостачання ">
        {% if advertisementDetails.isGas|default(false) == true %}
            <img src="{{ asset('bundles/app/img/ico/valve_on.png') }}" alt="">
        {% else %}
            <img src="{{ asset('bundles/app/img/ico/valve_off.png') }}" alt="">
        {% endif %}
    </div>
    <div class="details-sewerage {% if advertisementDetails.isSewerage|default(false) == true %} active {% endif %}"
         data-toggle="tooltip" title="{% if advertisementDetails.isSewerage|default(false) == true %} Присутня
                          {% else %} Відсутня {% endif %}централізована каналізація ">
        {% if advertisementDetails.isSewerage|default(false) == true %}
            <img src="{{ asset('bundles/app/img/ico/waste_on.png') }}" alt="">
        {% else %}
            <img src="{{ asset('bundles/app/img/ico/waste_off.png') }}" alt="">
        {% endif %}
    </div>
    <div class="details-electricity {% if advertisementDetails.isElectricity|default(false) == true %} active {% endif %}"
         data-toggle="tooltip" title="{% if advertisementDetails.isElectricity|default(false) == true %} Присутнє
                          {% else %} Відсутнє {% endif %}елекрозабезпечення ">
        {% if advertisementDetails.isElectricity|default(false) == true %}
            <img src="{{ asset('bundles/app/img/ico/idea_on.png') }}" alt="">
        {% else %}
            <img src="{{ asset('bundles/app/img/ico/idea_off.png') }}" alt="">
        {% endif %}
    </div>

</div>
<hr class="map-line">
<div> {{ advertisementDetails.dirPurpose.text }}</div>
<hr class="map-line">
<div class="map-main">
    <div class="map-main-caption">
        <div>Площа:</div>
        <div>Ціна:</div>
    </div>
    <div class="map-main-values">
        <div class="map-main-area">{{ (advertisementDetails.area*100)|number_format(0,',',' ') }} соток</div>
        <div class="">
            <span class="map-main-price">{{ advertisementDetails.price|number_format(0,',',' ') }} $</span>
            <span class="map-main-price-to-area">|
                {% if advertisementDetails.price == 0 or advertisementDetails.area == 0 %}
                    {{ advertisementDetails.price }}
                {% else %}
                    {{ (advertisementDetails.price/advertisementDetails.area/100)|number_format(0,',',' ') }}
                {% endif %}
                $ /сотка
            </span>
        </div>
    </div>
</div>
