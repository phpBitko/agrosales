{% extends 'AppBundle::index.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/cabinet.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/manifest.js') }}"></script>
    <script src="{{ asset('build/vendor.js') }}"></script>
    <script src="{{ asset('build/advertisement.js') }}"></script>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            Hello! Cabinet
            {{ form_start(form, {'method': 'POST', 'attr':{'id': 'form_'}}) }}
            {{ form_row(form.textHead) }}
            {{ form_row(form.textAbout) }}

            {{ form_widget(form.save, {'label':'Зберегти','attr':{'class':'btn btn-success'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}